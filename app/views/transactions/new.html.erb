<!-- app/views/transactions/new.html.erb -->

<h2>Create a New Transaction</h2>

<%= form_with(model: @transaction, url: category_transactions_path(@category), local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

  <div>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, @categories, :id, :name %>
  </div>

  <div>
    <%= form.submit "Save" %>
  </div>
<% end %>



